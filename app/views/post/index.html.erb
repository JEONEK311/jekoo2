<%= render "navbar" %>
<div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">번호</th>
          <th scope="col">제목</th>
          <th scope="col">작성자</th>
          <th scope="col">작성시간</th></th>
        </tr>
      </thead>
      <tbody>
        <% @post.each do |p|%>
          <tr>
            <th scope="row"><%= p.id %></th>
            <td style="width:70%;"><a href="/post/view/<%= p.id %>"><%= p.title %></a></td>
            <td style="width:10%;"><%= p.user.username %></td>
            <td style="width:15%;"><%= p.created_at.to_s.split(',').first.split(' ').first  %></td>
          </tr>
        <% end %>
        
      </tbody>
    </table>
    <a href="/post/new">
      <button type="button" class="btn btn-dark">글쓰기</button>
    </a>
</div>